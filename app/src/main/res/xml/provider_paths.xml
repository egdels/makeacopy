<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Share files from the app's internal storage -->
    <files-path name="files" path="." />
    
    <!-- Share files from the app's cache directory -->
    <cache-path name="cache" path="." />
    
    <!-- Share files from the app's external files directory -->
    <external-files-path name="external_files" path="." />
    
    <!-- Share files from the app's external cache directory -->
    <external-cache-path name="external_cache" path="." />
    
    <!-- Share files from the external storage -->
    <external-path name="external" path="." />
    
    <!-- Share files from the Pictures directory -->
    <external-path name="pictures" path="Pictures/MakeACopy" />
</paths>